{
    "name": "@mfe-orchestrator/template-web-component-remote",
    "version": "0.0.0",
    "private": false,
    "type": "module",
    "main": "./dist/index.umd.js",
    "module": "./dist/index.es.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.es.js",
            "require": "./dist/index.umd.js"
        }
    },
    "files": [
        "dist/"
    ],
    "repository": {
        "type": "git",
        "url": "https://azimutsrl@dev.azure.com/azimutsrl/Azimut%20Spagna/_git/azimut-espana-signature-fe"
    },
    "packageManager": "pnpm@9.6.0",
    "scripts": {
        "dev": "vite --host",
        "build": "tsc && vite build",
        "build:watch": "tsc && vite build --w",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "prettier-format": "prettier --config .prettierrc './**/*.ts*' --write"
    },
    "peerDependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@types/node": "^20.14.8",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.13",
        "lint-staged": "^15.2.5",
        "postcss": "^8.1.9",
        "postcss-import": "12.0.1",
        "prettier": "^3.6.2",
        "sass": "^1.77.6",
        "tslib": "^2.6.1",
        "typescript": "^5.9.2",
        "vite": "^7.1.7",
        "vite-tsconfig-paths": "^4.3.2"
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx}": [
            "npx prettier --write",
            "npx eslint --fix"
        ]
    },
    "msw": {
        "workerDirectory": [
            "src/mocks"
        ]
    },
    "dependencies": {
        "@r2wc/react-to-web-component": "^2.1.0",
        "@rollup/plugin-typescript": "^12.1.4",
        "vite-plugin-lib-inject-css": "^2.2.2"
    }
}
